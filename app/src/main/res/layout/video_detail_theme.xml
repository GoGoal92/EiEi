<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
            android:id="@+id/rv_click"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <market.goldandgo.videonew1.API.Zawgyitextview
                    android:id="@+id/title"
                    android:textSize="14sp"
                    android:padding="2dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/black"
                    android:text="Movie Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <market.goldandgo.videonew1.API.Zawgyitextview
                    android:id="@+id/cate"
                    android:textSize="11sp"
                    android:padding="2dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/colorPrimary"
                    android:text="SuperHero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                        android:background="@color/tethintcolor"
                        android:layout_marginRight="5dp"
                        android:layout_width="200dp"
                        android:layout_height="130dp">

                    <ImageView

                            android:id="@+id/iv"
                            android:scaleType="centerCrop"
                            android:transitionName="moviecover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    <ImageView
                            android:visibility="gone"
                            android:src="@drawable/networkimage"
                            android:transitionName="moviecover"
                            android:id="@+id/fake_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


                </RelativeLayout>

                <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="120dp">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_love"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/like"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="14sp"
                                android:text="10k Like"
                                android:padding="2dp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/view"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="14sp"
                                android:text="10k View"
                                android:padding="2dp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ic_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/comment"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="14sp"
                                android:text="10k Talking"
                                android:padding="2dp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                    android:visibility="gone"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_msg"/>

                <market.goldandgo.videonew1.API.Zawgyitextview
                        android:textSize="11sp"
                        android:padding="5dp"

                        android:textColor="@color/white"
                        android:text="1000 People are talking about this"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>