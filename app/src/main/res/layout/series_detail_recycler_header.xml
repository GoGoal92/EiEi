<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:background="@color/tethintcolor"
                android:id="@+id/iv"
                android:scaleType="centerCrop"
                android:transitionName="moviecover"
                android:layout_width="160dp"
                android:layout_height="180dp"/>

        <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@color/tethintcolor"
                android:id="@+id/iv_fake"
                android:scaleType="centerCrop"
                android:layout_width="160dp"
                android:layout_height="180dp"/>

        <market.goldandgo.videonew1.API.Zawgyitextview
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/title"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="SuperHero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/hidelayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/shadoweffect"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/info1"
                    android:layout_marginTop="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:text="10 Like | 10 View | 10 comment "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/loveiv"
                        android:background="@drawable/ic_love_un"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                <ImageView
                        android:id="@+id/bookmarkiv"
                        android:background="@drawable/ic_bookmark_un"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/shareiv"
                        android:background="@drawable/ic_share_un"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

            </LinearLayout>


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/admrect"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="250dp"></RelativeLayout>

            <com.mopub.mobileads.MoPubView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/adviewrect"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="250dp"
                />

            <View
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/white"/>

            <market.goldandgo.videonew1.API.Zawgyitextview
                    android:id="@+id/cate"
                    style="@style/shadoweffect"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="SuperHero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/detail"
                    android:autoLink="web"
                    style="@style/shadoweffect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLAH"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="11sp"
                   />



        </LinearLayout>

        <LinearLayout
                android:id="@+id/show_v"
                android:layout_marginTop="10dp"
                android:background="@drawable/transprent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout

                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/show_tv"
                        style="@style/shadoweffect"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="SHOW REVIEW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/image_arrow"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_arrow_down"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>

            </LinearLayout>


        </LinearLayout>


        <View
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

        <Button
                android:id="@+id/visible_ep"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:background="@drawable/rectanglebutton_appcolor"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:text="Show Episodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <market.goldandgo.videonew1.API.NestedListView
                android:visibility="gone"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/lvExp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>


        <View
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

        <TextView
                style="@style/shadoweffect"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="COMMENTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/commentlayout"
                android:background="@drawable/rectangle_white"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">



            <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:id="@+id/border"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                <ImageView
                        android:src="@drawable/ic_user_icon"
                        android:layout_margin="2dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/usericon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/white"/>

                <ImageView
                        android:visibility="gone"
                        android:id="@+id/golduser"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/gold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                />

            </RelativeLayout>



            <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginRight="35dp"
                        android:text="Say Somthing About this"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:textAllCaps="false"/>

                <ImageView
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_send"/>


            </RelativeLayout>


        </LinearLayout>

        <TextView
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:textColor="@color/red"
                android:textSize="9sp"
                style="@style/shadoweffect"
                android:text="Be aware, We'll be watching you"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textAllCaps="false"/>



    </LinearLayout>

</LinearLayout>