<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:background="@color/tethintcolor"
                android:id="@+id/iv"
                android:scaleType="centerCrop"
                android:transitionName="moviecover"
                android:layout_width="160dp"
                android:layout_height="180dp"/>

        <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@color/tethintcolor"
                android:id="@+id/iv_fake"
                android:scaleType="centerCrop"
                android:layout_width="160dp"
                android:layout_height="180dp"/>

        <market.goldandgo.videonew1.API.Zawgyitextview
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/title"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="SuperHero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/hidelayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    style="@style/shadoweffect"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:id="@+id/info1"
                    android:layout_marginTop="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:text="10 Like | 10 View | 10 comment "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/loveiv"
                        android:background="@drawable/ic_love_un"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                <ImageView
                        android:id="@+id/bookmarkiv"
                        android:background="@drawable/ic_bookmark_un"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/shareiv"
                        android:background="@drawable/ic_share_un"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/admrect"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="250dp"></RelativeLayout>

            <com.mopub.mobileads.MoPubView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/adviewrect"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="250dp"
                />

            <RelativeLayout
                android:id="@+id/startappads"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="1dp"
                    android:background="@color/white"/>

            <market.goldandgo.videonew1.API.Zawgyitextview
                    android:id="@+id/cate"
                    style="@style/shadoweffect"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="SuperHero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/detail"
                    android:autoLink="web"
                    style="@style/shadoweffect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BLAH"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="11sp"
                  />

            <include layout="@layout/detail_recycler_2"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>