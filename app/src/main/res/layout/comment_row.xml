<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/border"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                <ImageView
                        android:src="@drawable/ic_user_icon"
                        android:layout_margin="2dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/usericon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/white"/>

                <ImageView
                        android:visibility="gone"
                        android:id="@+id/golduser"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/gold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                />

            </RelativeLayout>




        <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle_tethicolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <market.goldandgo.videonew1.API.Zawgyitextview
                            android:id="@+id/cusername"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:text="Maung Fmovie"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:textStyle="bold"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:visibility="gone"
                            android:id="@+id/blueicon"
                            android:padding="2dp"
                            android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/ic_blue_mark"/>

                </LinearLayout>


                <market.goldandgo.videonew1.API.Zawgyitextview
                        android:id="@+id/ctext"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="I like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alotI like this  movie  so so much thz alot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/ctime"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:paddingTop="2dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text=" 53 minutes ago"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>


                <TextView
                        android:id="@+id/cedit"
                        style="@style/shadoweffect"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingTop="2dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text=" Edit "
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>